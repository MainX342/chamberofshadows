---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import SideBar from "../components/NavigateButtons";
import StaticMenu from "../components/StaticMenu.astro";
import OutlawRaces from "../components/Outlaw/Outlaw_races.astro";
import OutlawTalents from "../components/Outlaw/Outlaw_talents.astro";
import OutlawStats from "../components/Outlaw/Outlaw_stats.astro";
import OutlawEquip from "../components/Outlaw/Outlaw_equip.astro";
import OutlawEnchants from "../components/Outlaw/Outlaw_enchants.astro";
import OutlawBones from "../components/Outlaw/Outlaw_bones.astro";
import OutlawRotation from "../components/Outlaw/Outlaw_rotation.astro";
import Macro from "../components/Macro.astro";
---

<Layout title="Головорез">
  <Main>
    <div
      class="col-span-2 h-[calc(100vw/3)] max-h-[550px] bg-[url('/images/main_logo.webp')] w-full bg-top bg-no-repeat bg-cover shadow-[inset_0_0_50px_-3px_rgba(0,0,0,1)]"
    >
    </div>
    <div
      class="relative lg:grid lg:grid-cols-[0_1fr_220px] xl:grid-cols-[minmax(220px,20%)_1fr_minmax(220px,20%)]"
    >
      <div></div>
      <article
        class="mx-auto max-w-clamp_content flex flex-col justify-center items-center"
      >
        <OutlawRaces />
        <OutlawTalents />
        <OutlawStats />
        <OutlawEquip />
        <OutlawEnchants />
        <OutlawBones />
        <OutlawRotation />
        <Macro />
      </article>
      <StaticMenu />
    </div>
    <SideBar client:load />
  </Main>
</Layout>
