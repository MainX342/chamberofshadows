---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import SideBar from "../components/NavigateButtons";
import StaticMenu from "../components/StaticMenu.astro";
import AssassinationRaces from "../components/Assassination/Assassination_races.astro";
import AssassinationTalents from "../components/Assassination/Assassination_talents.astro";
import AssassinationStats from "../components/Assassination/Assassination_stats.astro";
import AssassinationEquip from "../components/Assassination/Assassination_equip.astro";
import AssassinationEnchants from "../components/Assassination/Assassination_enchants.astro";
import AssassinationRotation from "../components/Assassination/Assassination_rotation.astro";
import Macro from "../components/Macro.astro";
---

<Layout title="Ликвидация">
  <Main>
    <div
      class="col-span-2 h-[calc(100vw/3)] max-h-[550px] bg-[url('/images/main_logo.webp')] w-full bg-top bg-no-repeat bg-cover shadow-[inset_0_0_50px_-3px_rgba(0,0,0,1)]"
    >
    </div>
    <div
      class="relative lg:grid lg:grid-cols-[0_1fr_220px] xl:grid-cols-[minmax(220px,20%)_1fr_minmax(220px,20%)]"
    >
      <div></div>
      <article
        class="mx-auto max-w-clamp_content flex flex-col justify-center items-center"
      >
        <AssassinationRaces />
        <AssassinationTalents />
        <AssassinationStats />
        <AssassinationEquip />
        <AssassinationEnchants />
        <AssassinationRotation />
        <Macro />
      </article>
      <StaticMenu />
    </div>
    <SideBar client:load />
  </Main>
</Layout>
