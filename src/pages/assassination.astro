---
import Layout from "../layouts/Layout.astro";
import Main from "../components/Main.astro";
import SideBar from "../components/NavigateButtons";
import { assaMenuItems } from "../constants/content";
import H2 from "../components/H2.astro";
import StaticMenu from "../components/StaticMenu.astro";
---

<Layout title="Ликвидация">
  <Main>
    <div
      class="col-span-2 h-[calc(100vw/3)] max-h-[550px] bg-[url('/assets/main_logo.webp')] w-full bg-top bg-no-repeat bg-cover shadow-[inset_0_0_50px_-3px_rgba(0,0,0,1)]"
    >
    </div>
    <div
      class="relative lg:grid lg:grid-cols-[0_1fr_220px] xl:grid-cols-[minmax(220px,20vw)_1fr_minmax(220px,20vw)]"
    >
      <div></div>
      <article
        class="mx-auto max-w-clamp_content flex flex-col justify-center items-center"
      >
        {
          assaMenuItems.map((item) => (
            <section
              id={item.to}
              class="first:pt-[40px] w-full h-full flex flex-col justify-center items-center pb-[40px] last:pb-0 text-clamp_heading"
            >
              <H2 text={item.label} />
              <div class="border-0 border-b-2 w-[200px] pt-[12px]" />
              <p class="text-[#00BDD7] pt-[16px] text-center text-clamp_text">
                Lorem ipsum dolor sit amet consectetur adipisicing elit.
                Officiis officia necessitatibus illum pariatur asperiores
                dolores, id magni nemo culpa suscipit ratione impedit fugit, ad,
                non ullam quia aperiam quibusdam in! Lorem ipsum dolor sit amet
                consectetur adipisicing elit. Quos aperiam tempore corporis est
                animi ipsum nihil modi aut iste ullam ducimus nisi totam
                inventore rem tempora voluptatem labore, laborum hic? Lorem
                ipsum dolor sit amet consectetur adipisicing elit. Obcaecati
                officia, quaerat at enim doloremque ducimus! Ipsum est unde,
                voluptates atque suscipit consequatur dolores qui iusto amet.
                Quo esse ex eius? Lorem ipsum dolor sit amet consectetur
                adipisicing elit. Officiis officia necessitatibus illum pariatur
                asperiores dolores, id magni nemo culpa suscipit ratione impedit
                fugit, ad, non ullam quia aperiam quibusdam in! Lorem ipsum
                dolor sit amet consectetur adipisicing
              </p>
            </section>
          ))
        }
      </article>
      <StaticMenu />
    </div>
    <SideBar client:load />
  </Main>
</Layout>
