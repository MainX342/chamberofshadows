---
type Props = {
  text: string;
  href: string;
};

const { text, href } = Astro.props;
---

<a
  href={href}
  class="text-white font-bold group hover:text-rogue"
  rel="noopener"
  target="_blank"
>
  <span
    class="py-[3px] leading-normal bg-left-bottom bg-gradient-to-r from-rogue to-100 bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out"
    >{text}</span
  ></a
>
