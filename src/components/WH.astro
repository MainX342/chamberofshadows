---
type Props = {
  text: string;
  href: string;
};

const { text, href } = Astro.props;
---

<a
  href={href}
  class="text-100 font-light group hover:opacity-80"
  rel="noopener"
  target="_blank"
>
  <span
    class="py-[1px] leading-normal bg-left-bottom bg-gradient-to-r from-100 to-100 bg-[length:0%_1px] bg-no-repeat group-hover:bg-[length:100%_1px] transition-all duration-500 ease-out"
    >{text}</span
  ></a
>
